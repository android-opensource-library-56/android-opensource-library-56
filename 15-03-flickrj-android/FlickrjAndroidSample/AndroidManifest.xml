<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.mydns.sys1yagi.android.flickrjandroidsample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.mydns.sys1yagi.android.flickrjandroidsample.FlickrjAndroidSampleActivity"
            android:label="@string/title_activity_flickrj_android_sample" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jp.mydns.sys1yagi.android.flickrjandroidsample.PhotoSearchActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="jp.mydns.sys1yagi.android.flickrjandroidsample.OAuthActivity"
            android:label="@string/title_activity_oauth" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="{a unique scheme for your app}" />
            </intent-filter>
        </activity>
    </application>

</manifest>